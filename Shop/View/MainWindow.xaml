<Window x:Class="Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Авторизация" Height="700" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Login" Style="{StaticResource PrimLabel}"/>
                <TextBox x:Name="LoginBox" Style="{StaticResource PrimTextBox}"/>
            </StackPanel>
            <StackPanel Margin="0,50,0,0" Orientation="Horizontal">
                <Label Content="Password" Style="{StaticResource PrimLabel}"/>
                <TextBox x:Name="PasswordBox" Style="{StaticResource PrimTextBox}"/>
            </StackPanel>
        </StackPanel>
        <Button Grid.Row="2" Style="{StaticResource PrimButton}" Content="Enter" Click="Button_Click"/>
    </Grid>
</Window>
